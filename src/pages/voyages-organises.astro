---
import Layout from '../layouts/Layout.astro';
import ProgramCard from '../components/ProgramCard.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import Hero from '../components/Hero.astro';
import heroImage from '../assets/sliders/1.png';

const voyagePrograms = await getCollection('voyages');

const destinations = [
  { name: "Turquie", value: "Turquie" },
  { name: "Espagne", value: "Espagne" },
  { name: "Maroc", value: "Maroc" },
  { name: "Jordanie", value: "Jordanie" },
  { name: "Egypte", value: "Egypte" },
  { name: "Ouzbékistan", value: "Ouzbékistan" },
  { name: "Malaisie", value: "Malaisie" },
  { name: "Indonésie", value: "Indonésie" },
  { name: "Thaïlande", value: "Thaïlande" },
  { name: "Dubai", value: "Dubai" },
];

const voyagesWithCounts = destinations.map(dest => ({
  ...dest,
  count: voyagePrograms.filter(p => p.data.destination === dest.value).length
}));
---

<Layout 
  title="Voyages Organisés - Beauséjour Voyage" 
  description="Découvrez nos voyages organisés vers les plus belles destinations : Turquie, Espagne, Maroc, Egypte et plus encore."
>
  <section class="bg-gradient-to-br from-brand-teal via-brand-cyan to-gold text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-extrabold tracking-tight">Nos Voyages Organisés</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-2xl mx-auto">
        Des destinations de rêve sélectionnées pour vous offrir des expériences inoubliables
      </p>
    </div>
  </section>

  <!-- Filters -->
  <section class="py-8 bg-white border-b dark:bg-gray-900 dark:border-gray-700 sticky top-0 z-40 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div id="filter-buttons" class="flex flex-wrap justify-center gap-3">
        <button 
          class="filter-btn active px-6 py-2 rounded-full border-2 border-gold font-medium transition-all duration-200 bg-gold text-white dark:bg-yellow-400 dark:text-gray-900"
          data-filter="all"
        >
          Toutes destinations
        </button>
        {voyagesWithCounts.map((dest) => (
          <button 
            class="filter-btn px-6 py-2 rounded-full border-2 border-gold font-medium transition-all duration-200 text-gold hover:bg-gold hover:text-white dark:text-yellow-400 dark:border-yellow-400 dark:hover:bg-yellow-400 dark:hover:text-gray-900"
            data-filter={dest.value}
          >
            {dest.name} ({dest.count})
          </button>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-warm-beige dark:bg-gray-800 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div id="voyages-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {voyagePrograms.map((program) => (
          <div class="voyage-card transition-all duration-300 transform hover:-translate-y-1" data-destination={program.data.destination || 'other'}>
            <ProgramCard {...program.data} type="voyage" />
          </div>
        ))}
        {voyagePrograms.length === 0 && (
            <div class="col-span-1 md:col-span-2 lg:col-span-3 text-center py-20">
            <p class="text-2xl text-gray-500 font-medium">Aucun voyage programmé pour le moment.</p>
            <p class="mt-2 text-gray-400">Revenez bientôt pour découvrir nos nouvelles offres.</p>
            </div>
        )}
      </div>
      <div id="no-results" class="hidden text-center py-20">
        <p class="text-2xl text-gray-500 font-medium">Aucun voyage trouvé pour cette destination.</p>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-10 sm:py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-brand-teal mb-3 sm:mb-4 dark:text-cyan-400">
          L'Excellence de nos Voyages Organisés
        </h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
        <div class="bg-white p-4 sm:p-6 rounded-2xl shadow-lg text-center dark:bg-gray-800">
          <div class="bg-brand-teal/10 text-brand-teal rounded-full w-12 h-12 sm:w-16 sm:h-16 flex items-center justify-center mx-auto mb-3 sm:mb-4 dark:bg-cyan-400/10 dark:text-cyan-400">
            <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2 dark:text-gray-100">Guides Experts</h3>
          <p class="text-gray-600 text-sm sm:text-base dark:text-gray-300">Nos guides francophones sont des experts passionnés de l'histoire et de la culture des régions visitées.</p>
        </div>
        <div class="bg-white p-4 sm:p-6 rounded-2xl shadow-lg text-center dark:bg-gray-800">
          <div class="bg-brand-teal/10 text-brand-teal rounded-full w-12 h-12 sm:w-16 sm:h-16 flex items-center justify-center mx-auto mb-3 sm:mb-4 dark:bg-cyan-400/10 dark:text-cyan-400">
            <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 4h5m-5 4h5"></path></svg>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2 dark:text-gray-100">Hôtels de Charme</h3>
          <p class="text-gray-600 text-sm sm:text-base dark:text-gray-300">Nous sélectionnons des hébergements de qualité alliant confort moderne et authenticité locale.</p>
        </div>
        <div class="bg-white p-4 sm:p-6 rounded-2xl shadow-lg text-center dark:bg-gray-800">
          <div class="bg-brand-teal/10 text-brand-teal rounded-full w-12 h-12 sm:w-16 sm:h-16 flex items-center justify-center mx-auto mb-3 sm:mb-4 dark:bg-cyan-400/10 dark:text-cyan-400">
            <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-1 sm:mb-2 dark:text-gray-100">Itinéraires Optimisés</h3>
          <p class="text-gray-600 text-sm sm:text-base dark:text-gray-300">Nos circuits sont conçus pour vous offrir une expérience riche et fluide, sans perte de temps.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-10 sm:py-16 bg-gradient-to-r from-brand-teal to-brand-cyan text-white">
    <div class="max-w-4xl mx-auto px-2 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4 sm:mb-6">
        Prêt pour une Aventure Culturelle Inoubliable ?
      </h2>
      <p class="text-base sm:text-xl mb-6 sm:mb-8 text-gray-200">
        Contactez nos experts voyage pour créer votre circuit sur mesure ou réserver l'un de nos programmes.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
        <a 
          href="/contact" 
          class="bg-black hover:bg-black-600 text-brand-teal px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-semibold text-base sm:text-lg transition-colors duration-200"
        >
          Demander un devis sur mesure
        </a>
        <a 
          href="tel:+33123456789" 
         
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const voyageCards = document.querySelectorAll('.voyage-card');
    const noResults = document.getElementById('no-results');

    filterButtons.forEach(button => {
      button.addEventListener('click', (event) => {
        const target = event.currentTarget as HTMLElement;
        
        // Update active state
        filterButtons.forEach(btn => {
            btn.classList.remove('bg-gold', 'text-white', 'dark:bg-yellow-400', 'dark:text-gray-900');
            btn.classList.add('text-gold', 'hover:bg-gold', 'hover:text-white', 'dark:text-yellow-400', 'dark:border-yellow-400', 'dark:hover:bg-yellow-400', 'dark:hover:text-gray-900');
            btn.classList.remove('active');
        });
        target.classList.add('bg-gold', 'text-white', 'dark:bg-yellow-400', 'dark:text-gray-900');
        target.classList.remove('text-gold', 'hover:bg-gold', 'hover:text-white', 'dark:text-yellow-400', 'dark:border-yellow-400', 'dark:hover:bg-yellow-400', 'dark:hover:text-gray-900');
        target.classList.add('active');

        const filterValue = target.dataset.filter;
        let visibleCount = 0;

        voyageCards.forEach(card => {
            const cardEl = card as HTMLElement;
            const destination = cardEl.dataset.destination;
          
            if (filterValue === 'all' || destination === filterValue) {
                cardEl.style.display = '';
                visibleCount++;
                // Add fade-in animation
                cardEl.style.opacity = '0';
                setTimeout(() => {
                    cardEl.style.opacity = '1';
                }, 50);
            } else {
                cardEl.style.display = 'none';
            }
        });

        // Show/hide no results message
        if (noResults) {
            if (visibleCount > 0) {
                noResults.classList.add('hidden');
            } else {
                noResults.classList.remove('hidden');
            }
        }
      });
    });
  });
</script>