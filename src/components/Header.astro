---
import { Image } from 'astro:assets';
import logo from '../assets/files/logo1.svg';
---

<header class="bg-white shadow-lg sticky top-0 z-50 dark:bg-gray-800 dark:border-b dark:border-gray-700">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <Image src={logo} alt="Beauséjour Voyage Logo" class="w-12 h-12" />
        <div class="dark:text-gray-100">
          <h1 class="text-2xl font-bold text-deep-green dark:text-white">Beauséjour Voyage</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400">Votre partenaire voyage</p>
        </div>
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="https://ticket.beausejourvoyage.com" target="_blank" rel="noopener noreferrer" class="bg-brand-teal hover:opacity-90 text-white px-6 py-2 rounded-lg transition-colors duration-200 font-medium dark:bg-cyan-500 dark:hover:bg-cyan-600">
          Booking
        </a>
        <a href="/" class="text-gray-700 hover:text-gold transition-colors duration-200 font-medium dark:text-gray-300 dark:hover:text-gold">Accueil</a>
        <a href="/hajj-omra" class="text-gray-700 hover:text-gold transition-colors duration-200 font-medium dark:text-gray-300 dark:hover:text-gold">Hajj & Omra</a>
        <a href="/voyages-organises" class="text-gray-700 hover:text-gold transition-colors duration-200 font-medium dark:text-gray-300 dark:hover:text-gold">Voyages Organisés</a>
        <a href="/blog" class="text-gray-700 hover:text-gold transition-colors duration-200 font-medium dark:text-gray-300 dark:hover:text-gold">Blog</a>
        <a href="/gallery" class="text-gray-700 hover:text-gold transition-colors duration-200 font-medium dark:text-gray-300 dark:hover:text-gold">Galerie</a>
        
        <!-- Theme Toggle -->
        <button id="theme-toggle" class="text-gray-700 dark:text-gray-300 hover:text-gold dark:hover:text-gold">
          <svg id="theme-toggle-dark-icon" class="w-6 h-6 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
          <svg id="theme-toggle-light-icon" class="w-6 h-6 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
          </svg>
        </button>

        <a href="/contact" class="bg-gold hover:bg-yellow-600 text-white px-6 py-2 rounded-lg transition-colors duration-200 font-medium dark:text-gray-900 dark:bg-yellow-400 dark:hover:bg-yellow-500">
          Contact
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center gap-4">
        <!-- Theme Toggle for Mobile -->
        <button id="mobile-theme-toggle" class="text-gray-700 dark:text-gray-300 hover:text-gold dark:hover:text-gold">
          <svg id="mobile-theme-toggle-dark-icon" class="w-6 h-6 hidden" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
          <svg id="mobile-theme-toggle-light-icon" class="w-6 h-6 hidden" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
        </button>
        <button id="mobile-menu-button" class="text-gray-700 hover:text-gold dark:text-gray-300 dark:hover:text-gold">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="pt-2 pb-3 space-y-1 sm:px-3">
        <a href="https://ticket.beausejourvoyage.com" target="_blank" rel="noopener noreferrer" class="bg-brand-teal text-white block px-3 py-2 rounded-md text-base font-medium text-center dark:bg-cyan-500">Booking</a>
        <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Accueil</a>
        <a href="/hajj-omra" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Hajj & Omra</a>
        <a href="/voyages-organises" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Voyages Organisés</a>
        <a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Blog</a>
        <a href="/gallery" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Galerie</a>
        <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gold hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>