---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  date: string;
  category: string;
  slug: string;
}

const { title, excerpt, image, date, category, slug } = Astro.props;
---

<article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 dark:bg-gray-800 dark:shadow-lg dark:hover:shadow-gray-700/50">
  <div class="relative overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
    />
    <div class="absolute top-4 left-4">
      <span class="bg-gold text-deep-green px-3 py-1 rounded-full text-sm font-semibold dark:bg-yellow-400 dark:text-gray-900">
        {category}
      </span>
    </div>
  </div>
  
  <div class="p-6">
    <div class="flex items-center text-sm text-gray-500 mb-3 dark:text-gray-400">
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
      </svg>
      {date}
    </div>
    
    <h3 class="text-xl font-bold text-deep-green mb-3 line-clamp-2 dark:text-cyan-400">
      {title}
    </h3>
    
    <p class="text-gray-600 mb-4 line-clamp-3 dark:text-gray-300">
      {excerpt}
    </p>
    
    <a 
      href={`/blog/${slug}`}
      class="inline-flex items-center text-gold hover:text-deep-green font-semibold transition-colors duration-200 dark:text-yellow-400 dark:hover:text-yellow-300"
    >
      Lire la suite
      <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>